def utopian_tree(n,h):
    for i in  range(1,n+1):
        if i%2!=0:
           h=2*h
        else :
            h=h+1
    return h
t=int(input("number of test cases"))
for j in range(t) :
     h=int(input("enter height of tree "))
     n=int(input("enter number of cycles "))
     print("height of tree in",n,"cycle is",utopian_tree(n,h))
